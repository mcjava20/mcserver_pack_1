 {
  "multipart": [
    {
      "when": { "OR": [{
        "facing": "down",
        "enabled": "true"
      }]},
      "apply": {
        "model": "block/hopper"
      }
    },
	{
      "when": { "OR": [{
        "facing": "north",
        "enabled": "true"
      }]},
      "apply": {
        "model": "block/hopper_side"
      }
    },
	{
      "when": { "OR": [{
        "facing": "east",
        "enabled": "true"
      }]},
      "apply": {
        "model": "block/hopper_side",
		"y": 90
      }
    },
	{
      "when": { "OR": [{
        "facing": "south",
        "enabled": "true"
      }]},
      "apply": {
        "model": "block/hopper_side",
		"y": 180
      }
    },
	{
      "when": { "OR": [{
        "facing": "west",
        "enabled": "true"
      }]},
      "apply": {
        "model": "block/hopper_side",
		"y": 270
      }
    },
	{
      "when": { "OR": [{
        "facing": "north",
        "enabled": "false"
      }]},
      "apply": {
        "model": "block/hopper_side"
      }
    },
	{
      "when": { "OR": [{
        "facing": "east",
        "enabled": "false"
      }]},
      "apply": {
        "model": "block/hopper_side",
		"y": 90
      }
    },
	{
      "when": { "OR": [{
        "facing": "south",
        "enabled": "false"
      }]},
      "apply": {
        "model": "block/hopper_side",
		"y": 180
      }
    },
	{
      "when": { "OR": [{
        "facing": "west",
        "enabled": "false"
      }]},
      "apply": {
        "model": "block/hopper_side",
		"y": 270
      }
    },
	{
      "when": { "OR": [{
        "facing": "down",
        "enabled": "false"
      }]},
      "apply": {
        "model": "block/hopper"
      }
    }
  ]
}